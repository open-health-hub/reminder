[Unit]
Description=takeyourmeds-web-gunicorn
After=network.target

[Service]
User=www-data
Group=www-data
Restart=always

ExecStart=/usr/share/python/takeyourmeds-web/bin/gunicorn --workers=8 --log-level=info --preload takeyourmeds.wsgi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

PrivateTmp=true
