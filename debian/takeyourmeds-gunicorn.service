[Unit]
Description=takeyourmeds-gunicorn
After=network.target

[Service]
User=www-data
Group=www-data
PIDFile=/run/takeyourmeds-web/pid
Restart=always

ExecStart=/usr/share/python/takeyourmeds-web/bin/gunicorn --pid /run/gunicorn/pid --workers=8 --log-level=info --preload takeyourmeds.wsgi
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

PrivateTmp=true
